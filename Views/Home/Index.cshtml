@{
    ViewData["Title"] = "Home Page";
}

@model List<Bowler>

<h1>Bowlers @ViewBag.TeamName</h1>

<table class="table table-striped">
    <thead>

        <tr>
            <th>Bowler Name</th>
            <th>Street Address</th>
            <th>City</th>
            <th>State</th>
            <th>Zip</th>
            <th>Phone Number</th>
            <th>Team Name</th>
            <th>
                <form method="get" asp-controller="Home" asp-action="AddBowler">
                    <button class="btn btn-sm btn-outline-primary" type="submit">Add</button>
                </form>
            </th>
            
        </tr>

    </thead>

    <tbody>

        @foreach(var b in Model)
        {
            <tr>
                <td>@b.BowlerLastName, @b.BowlerFirstName @b.BowlerMiddleInit</td>
                <td>@b.BowlerAddress</td>
                <td>@b.BowlerCity</td>
                <td>@b.BowlerState</td>
                <td>@b.BowlerZip</td>
                <td>@b.BowlerPhoneNumber</td>
                <td>@b.Team.TeamName</td>                
                <td><a asp-controller="Home" asp-action="Edit" asp-route-bowlerid="@b.BowlerID" class="btn btn-sm btn-outline-success" type="submit">Edit</a></td>
                <td><a class="btn btn-sm btn-outline-danger" type="submit" asp-controller="Home" asp-action="Delete" asp-route-bowlerid="@b.BowlerID">Delete</a></td>
            </tr>
        }



    </tbody>
</table>

